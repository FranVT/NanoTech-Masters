# LAMMPS script for shear deformation simulaiton

# Fco. Vazquez and Felipe Benavides

units lj
dimension 3
boundary p p p

# Styles of atoms and that stuff
atom_style full 
bond_style harmonic
angle_style harmonic
pair_style hybrid/overlay/omp zero 0.0 lj/cut/omp 1.12 table/omp linear 5000000 threebody/table
newton on

read_data data.hydrogel extra/bond/per/atom 10 extra/angle/per/atom 6 extra/special/per/atom 10

change_box all triclinic

# Coefficients
include potential.in

# Molecules
include molDeform.in

# COMPUTES

# Compute global kinetic and potential energy and temperature
compute t all temp
compute tCM CM temp
compute p all pressure t
compute ep all pe
compute ek all ke
compute ekCM CM ke
compute stressVirial all pressure t ke pair
compute wcaPair all pair table/omp 1 epair
compute patchPair all pair table/omp 2 epair
compute swapPair all pair threebody/table epair
compute disc CM displace/atom
compute daux CM chunk/atom type pbc yes
compute dis CM reduce/chunk daux sum c_disc[4]
#compute disM CM reduce/chunk 2 sum c_disc[4]


# DUMPS and FIXES

# Save atom positions
dump dumpID all atom ${Nsave} ${dumpDir}/shear/patchyParticles_shear.*.dumpf
dump_modify dumpID pbc yes # remap atoms via periodic boundary conditions

# Save global energies and temperature
group Energy empty
group PairE1 empty
group PairE2 empty
group PairE3 empty

fix fixEng Energy ave/time 1 10 10 c_t c_ep c_ek c_tCM c_p file ${Dir}/energy_shear.fixf

fix fixwca PairE1 ave/time 1 10 10 c_wcaPair file ${Dir}/wcaPair_shear.fixf
fix fixpatch PairE2 ave/time 1 10 10 c_patchPair file ${Dir}/patchPair_shear.fixf
fix fixswap PairE3 ave/time 1 10 10 c_swapPair file ${Dir}/swapPair_shear.fixf

# Save Atom displacement
group Displ empty
fix fixDispl Displ ave/time 1 ${Nave} ${Nave} c_dis[1] c_dis[2] c_dis[3] c_dis[4] file ${Dir}/cmdisplacement_shear.fixf

# Save Stress tensor
group Stress empty
fix fixStress5 Stress ave/time 1 ${Nave} ${Nave} c_stressVirial[*] file ${Dir}/stressVirial_shear.fixf

thermo ${sstep}

# RUN SIMULATION

# Brownian Dynamics using Langevin Thermostat

# Set the time integrator
fix VelVerlet all nve/omp # Use Velocity Verlet integrator
fix ThermoLng all langevin ${temp} ${temp} ${damp} 12345 # Brownian Dynamics: langevin + nve

variable shearDirection equal xy
variable maxTilt equal 0.5*lx
variable restoreTilt equal -v_maxTilt
variable shear_distance equal ${shear_rate}*lx*${tstep}

timestep ${tstep}
run ${shear_it} post no every 1 &
   "change_box all xy delta ${shear_distance} remap units box" &
   "if '${shearDirection} >= ${maxTilt}' then 'change_box all xy final ${restoreTilt} remap units box'"




